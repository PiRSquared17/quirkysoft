#!/usr/bin/env python

def build(bld):

  sox = bld.create_obj('sox')
  sox.find_sources_in_dirs('.', exts=['.wav'])
  if bld.env()['WITH_SDL']:
    sox.clone('sdl')

  lib = bld.create_obj('bin2o')
  lib.source = [source.replace('.wav', '.snd') for source in sox.source]
  lib.export_incdirs = '.'
  lib.target = 'sounds'
  if bld.env()['WITH_SDL']:
    lib.clone('sdl')
